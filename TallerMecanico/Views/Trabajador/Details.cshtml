@model TallerMecanico.Models.Evidencias

@{
    ViewBag.Title = "Details";
}
<br />
<h2 class="text-center">Detalles </h2>
<br />
<div>
    <h4>Evidencias</h4>
    <hr />
    <div class="form-group row">
        <div class="col-6">
            @Html.DisplayNameFor(model => model.Fecha)
            @Html.EditorFor(model => model.Fecha, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
        </div>
        <div class="col-6">
            @Html.DisplayNameFor(model => model.Comentarios)
            @Html.EditorFor(model => model.Comentarios, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-6">
            @Html.DisplayNameFor(model => model.Carros.Marca)
            @Html.EditorFor(model => model.Carros.Marca, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
        </div>
    </div>
</div>

<div class="form-group row text-center">
    <div class="col-12">
        @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-warning" })
        @Html.ActionLink("Regresar al inicio", "Index", null, new { @class = "btn btn-secondary" })
    </div>
</div>
