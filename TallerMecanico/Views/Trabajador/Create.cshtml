@model TallerMecanico.Models.EvidenciasCE

@{
    ViewBag.Title = "Create";
}
<br />
<div class="border border-secondary card bg-write text-danger">
    <div class="card bg-success text-warning card-header text-center">
        <h2 class="text-center">Agregar Evidencia</h2>
    </div>
    <div class="card-body">
        @using (Html.BeginForm("Create", "Trabajador", FormMethod.Post, new { enctype="multipart/form-data"}))
        {
            @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group row">
                <div class="col-6">
                    @Html.LabelFor(model => model.Id_Carro, "Id_Carro", htmlAttributes: new { @class = "control-label col-md-8" })
                    @Html.DropDownList("Id_Carro", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Id_Carro, "", new { @class = "text-danger" })
                </div>
                <div class="col-6">
                    @Html.LabelFor(model => model.Comentarios, htmlAttributes: new { @class = "control-label col-md-8" })
                    @Html.EditorFor(model => model.Comentarios, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Comentarios, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                <div class="col-6">
                    @Html.LabelFor(model => model.foto, htmlAttributes: new { @class = "control-label col-md-8" })
                    @Html.TextBoxFor(model => model.foto, new { type = "file", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.foto, "", new { @class = "text-danger" })
                </div>
                <div class="col-6">

                </div>
            </div>
            <div class="form-group row">
                <div class="col-6">
                    <input type="submit" value="Guardar" class="btn btn-success" />
                </div>
                <div class="col-6">
                    @Html.ActionLink("Regresar al inicio", "Index", null, null, new { @class = "btn btn-secondary" })
                </div>
            </div>

        </div>
        }
    </div>
</div>