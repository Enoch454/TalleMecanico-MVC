@model IEnumerable<TallerMecanico.Models.Evidencias>

@{
    ViewBag.Title = "Index";
}
<br />
<h2 class="text-center">Evidencias Trabajador</h2>
<br />
@Html.ActionLink("Agregar Evidencia", "Create", null, null, new { @class = "btn btn-success" })
<br /><br />
<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Fecha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Comentarios)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Carros.Marca)
        </th>
        <th>
            @**@Imagen
        </th>
        <th colspan="3"></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Comentarios)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Carros.Marca)
        </td>
        <td>
            @*Html.DisplayFor(modelItem => item.foto) *@
            @Html.ActionLink("Ver imagen", "verImagen", new { id = item.Id }, new { @class = "btn btn-info" })
        </td>   
        <td class="text-center">
            @Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @class = "btn btn-success" })
        </td>
        <td class="text-center">
            @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-warning" })
        </td>
        <td class="text-center">
            @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
    }
</table>
<div class="form-group row text-center">
    <div class="col-12">
        @Html.ActionLink("Regresar al inicio", "Index", null, null, new { @class = "btn btn-secondary" })
    </div>
</div>