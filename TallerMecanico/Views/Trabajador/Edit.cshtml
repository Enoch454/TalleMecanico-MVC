@model TallerMecanico.Models.EvidenciasCE

@{
    ViewBag.Title = "Edit";
}
<br />
<h2>Editar evidencia</h2>
<br />
@using (Html.BeginForm("Edit", "Trabajador", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="form-group row">
        <div class="col-6">
            @Html.LabelFor(model => model.Id_Carro, "Id_Carro", htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.DropDownList("Id_Carro", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Id_Carro, "", new { @class = "text-danger" })
        </div>
        <div class="col-6">
            @Html.LabelFor(model => model.Comentarios, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.EditorFor(model => model.Comentarios, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Comentarios, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-6">
            @Html.LabelFor(model => model.foto, htmlAttributes: new { @class = "control-label col-md-8" })
            @Html.TextBoxFor(model => model.foto, new { type = "file", @class = "form-control" })
            @Html.ValidationMessageFor(model => model.foto, "", new { @class = "text-danger" })
        </div>
        <div class="col-6">
            @Html.LabelFor(model => model.Fecha, htmlAttributes: new { @class = "control-label col-md-8" })
            @Html.EditorFor(model => model.Fecha, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Fecha, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-6">
            <input type="submit" value="Guardar" class="btn btn-success" />
        </div>
        <div class="col-6">
            @Html.ActionLink("Regresar al inicio", "Index", null, null, new { @class = "btn btn-secondary" })
        </div>
    </div>
}