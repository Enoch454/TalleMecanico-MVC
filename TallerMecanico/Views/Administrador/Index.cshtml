@model IEnumerable<TallerMecanico.Models.Carros>

@{
    ViewBag.Title = "Index";
}
<br />
<h2 class="text-center">Asignar empleados</h2>
<br />
@Html.ActionLink("Agregar Carro ", "Create", null, null, new { @class = "btn btn-success" })
<br /><br />
<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Marca)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Modelo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Color)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.codigo)
        </th>
        <th>
            @**@Descripcion
        </th>
        <th>
            @**@Cliente
        </th>
        <th>
            @**@Empleado
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado.Estado1)
        </th>
        <th colspan="3"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Modelo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Color)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.codigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescripcionDetalles)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usuarios.Usuario)
            </td>
            <td>
                @if (item.Estado.Estado1 == "Disponible")
                {
                    <p>Ninguno</p>
                }
                else
                {
                    @Html.DisplayFor(modelItem => item.Usuarios1.Usuario)
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado.Estado1)
            </td>
            <td>
                @Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @class = "btn btn-success" })
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-warning" })
            </td>
            <td>
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }
</table>