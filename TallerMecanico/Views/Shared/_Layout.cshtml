<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" /> 
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <nav class="navbar navbar-light bg-success">
        <a class="navbar-brand" href="~/">Bienvenidos al Taller Mecanico</a>
        <form class="form-inline">
            @Html.ActionLink("Cerrar sesión", "LogOut", "Usuarios", null, new { @class = "btn btn-outline-danger my-2 my-sm-0" })
        </form>
    </nav>

    <div class="container body-content">
        @RenderBody()
    </div>
    <hr />
    <footer class="text-success  fixed-bottom">
        <h4 class="text-center">
            &copy; @DateTime.Now.Year  Aplicación creada por Karen Guzmán & Enoch Galindo</>
        </h4>
    </footer>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>